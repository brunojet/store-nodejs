{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug Main App (Single Process)",
            "type": "node",
            "request": "launch",
            "program": "${workspaceFolder}/src/apps/main-app/src/main.ts",
            "runtimeExecutable": "npx",
            "runtimeArgs": [
                "tsx"
            ],
            "env": {
                "NODE_ENV": "development",
                "USE_CLUSTER": "false",
                "HOST": "localhost",
                "PORT": "3000"
            },
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "resolveSourceMapLocations": [
                "${workspaceFolder}/**",
                "!**/node_modules/**"
            ]
        },
        {
            "name": "Debug Main App (Cluster Mode)",
            "type": "node",
            "request": "launch",
            "program": "${workspaceFolder}/src/apps/main-app/src/main.ts",
            "runtimeExecutable": "npx",
            "runtimeArgs": [
                "tsx"
            ],
            "env": {
                "NODE_ENV": "development",
                "USE_CLUSTER": "true",
                "HOST": "localhost",
                "PORT": "3000"
            },
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "resolveSourceMapLocations": [
                "${workspaceFolder}/**",
                "!**/node_modules/**"
            ]
        },
        {
            "name": "Debug Backoffice API (Standalone)",
            "type": "node",
            "request": "launch",
            "program": "${workspaceFolder}/src/apps/backoffice-api/src/main.ts",
            "runtimeExecutable": "npx",
            "runtimeArgs": [
                "tsx"
            ],
            "env": {
                "NODE_ENV": "development",
                "HOST": "localhost",
                "PORT": "3000"
            },
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "resolveSourceMapLocations": [
                "${workspaceFolder}/**",
                "!**/node_modules/**"
            ]
        },
        {
            "name": "Debug Production Build",
            "type": "node",
            "request": "launch",
            "program": "${workspaceFolder}/dist/main-app/main.js",
            "env": {
                "NODE_ENV": "production",
                "USE_CLUSTER": "false"
            },
            "preLaunchTask": "build:main-app",
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "sourceMaps": true
        },
        {
            "name": "Attach to Running Process",
            "type": "node",
            "request": "attach",
            "port": 9229,
            "skipFiles": [
                "<node_internals>/**"
            ]
        }
    ]
}